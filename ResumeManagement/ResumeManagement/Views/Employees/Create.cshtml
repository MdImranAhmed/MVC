@model ResumeManagement.Models.ViewModels.EmployeeViewModel
@{
    ViewBag.Title = "Create";
}
<br />
@using (Html.BeginForm("Create", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-6">
            <h2>Employees</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">
                @Html.LabelFor(x => x.EmployeeName, htmlAttributes: new { @class = "control-label col-3" })
                @Html.EditorFor(x => x.EmployeeName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(x => x.BirthDate, htmlAttributes: new { @class = "control-label col-3" })
                @Html.EditorFor(x => x.BirthDate, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", Type = "date" } })
                @Html.ValidationMessageFor(x => x.BirthDate, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(x => x.Salary, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.EditorFor(x => x.Salary, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.Salary, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3">
                <img src="/Images/noimageavailable.jpg" alt="" ID="ImgFile" width="70" height="70" class="rounded">
                <div class="col-9">
                    <input id="upimage" class="upimage" type="file" name="PicturePath" onchange="readURL(this);" style="display:none">
                    <label for="upimage" class="lebelupimage">Upload Image</label>
                </div>
            </div>
            <div class="mb-3">
                @Html.LabelFor(x => x.IsActive, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    <div class="checkbox">
                        @Html.EditorFor(x => x.IsActive)
                        @Html.ValidationMessageFor(x => x.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            @*<button type="submit" class="btn btn-primary">Submit</button>*@
        </div>
        <div class="col-6">
            <h2>Select Qualification</h2>
            <div class="d-flex justify-content-end mb-3">
                <a href="#" id="btnPlus" style="width:90px" class="btn btn-warning mr-2">Add</a>
            </div>
            <div id="QualificationContainer">
                @Html.Action("AddNewQualification", "Employees")
            </div>
        </div>
    </div>
    @*<div class="d-flex justify-content-start offset-2">
        
    </div>*@
    <div class="d-flex justify-content-start offset-10">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>

        }



